  <nav>
  <a href='/news'>News</a>
  <a href='/contact'>Contact Us</a>
  <a href='/pricing' class='dropbox'>Pricing</a>
  <a href='/faq'>FAQs</a>
    <% if current_user %>
     <%= link_to "Account", '/account' %>
    <% else %>
      <a href='https://updog.co/auth/dropbox' class='js-track-link-click'>Log in</a>
    <% end %>
  </nav>
</div>
</header>
<section class='main'>
<div class='wrapper'>
  <% unless flash.empty? %>
    <div class='notice'>
      <%=  flash[:notice].html_safe %>
    </div>
  <% end %>
</div>
    <%= yield %>
</section>

<footer>
  <div class='wrapper'>
   &copy; UpDog <%= DateTime.now.strftime("%Y") %> |
   <%= link_to "View Source", '/source' %> |
   <a href='/feedback'>Feedback</a> |
